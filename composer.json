{
  "name": "phpmailer/dkimvalidator",
  "description": "A DKIM signature validator in PHP.",
  "license": "MIT",
  "authors": [
    {
      "name": "angrychimp",
      "email": "rk@angrychimp.net"
    },
    {
      "name": "Teon d.o.o. - Bostjan Skufca",
      "email": "bostjan@teon.si"
    },
    {
      "name": "Marcus Bointon",
      "email": "phpmailer@synchromedia.co.uk"
    }
  ],
  "funding": [
    {
      "url": "https://github.com/Synchro",
      "type": "github"
    }
  ],
  "support": {
    "issues": "https://github.com/PHPMailer/DKIMValidator/issues",
    "source": "https://github.com/PHPMailer/DKIMValidator"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.3|^8.0",
    "ext-openssl": "*",
    "ext-hash": "*",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "vimeo/psalm": "^3.17.1",
    "squizlabs/php_codesniffer": "^3.5.6",
    "phpcompatibility/php-compatibility": "^9.3.5",
    "phpunit/phpunit": "^9.4.1",
    "pestphp/pest": "^0.3.9",
    "phpstan/phpstan": "^0.12.49",
    "nunomaduro/phpinsights": "^1.14",
    "phpmailer/phpmailer": "^6.1.8",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0"
  },
  "autoload": {
    "psr-4": {
      "PHPMailer\\DKIMValidator\\": "src/",
      "PHPMailer\\DKIMValidator\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test:unit": "./vendor/bin/pest --coverage --colors=always",
    "test:types": "./vendor/bin/phpstan analyse --ansi --memory-limit=0",
    "test:psalm": "./vendor/bin/psalm --show-info=true",
    "test": [
      "@test:unit",
      "@test:types",
      "@test:psalm"
    ]
  }
}
