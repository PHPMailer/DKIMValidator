{
  "name": "phpmailer/dkimvalidator",
  "description": "A DKIM signature validator in PHP.",
  "license": "MIT",
  "authors": [
    {
      "name": "angrychimp",
      "email": "rk@angrychimp.net"
    },
    {
      "name": "Teon d.o.o. - Bostjan Skufca",
      "email": "bostjan@teon.si"
    },
    {
      "name": "Marcus Bointon",
      "email": "phpmailer@synchromedia.co.uk"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=7.3.0",
    "ext-openssl": "*",
    "ext-hash": "*",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "vimeo/psalm": "^3.11.7",
    "squizlabs/php_codesniffer": "^3.5.5",
    "phpcompatibility/php-compatibility": "^9.3.5",
    "phpunit/phpunit": "^9.2.5",
    "pestphp/pest": "^0.1.5",
    "phpstan/phpstan": "^0.12.30",
    "nunomaduro/phpinsights": "^1.14"
  },
  "autoload": {
    "psr-4": {
      "PHPMailer\\DKIMValidator\\": "src/"
    }
  },
  "scripts": {
    "test:unit": "./vendor/bin/pest",
    "test:types": "./vendor/bin/phpstan analyse",
    "test:psalm": "./vendor/bin/psalm --show-info=true",
    "test:insights": "./vendor/bin/phpinsights analyse src/",
    "test": [
      "@test:unit",
      "@test:types",
      "@test:psalm",
      "@test:insights"
    ]
  }
}
