{
  "name": "phpmailer/dkimvalidator",
  "description": "A DKIM signature validator in PHP.",
  "license": "MIT",
  "authors": [
    {
      "name": "angrychimp",
      "email": "rk@angrychimp.net"
    },
    {
      "name": "Teon d.o.o. - Bostjan Skufca",
      "email": "bostjan@teon.si"
    },
    {
      "name": "Marcus Bointon",
      "email": "phpmailer@synchromedia.co.uk"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=7.3.0",
    "ext-openssl": "*",
    "ext-hash": "*",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "vimeo/psalm": "^3.11",
    "squizlabs/php_codesniffer": "^3.5",
    "phpcompatibility/php-compatibility": "^9.3",
    "nunomaduro/phpinsights": "dev-master",
    "phpunit/phpunit": "^9.1",
    "pestphp/pest": "^0.1.5",
    "phpstan/phpstan": "^0.12.25"
  },
  "autoload": {
    "psr-4": {
      "PHPMailer\\DKIMValidator\\": "src/"
    }
  },
  "scripts": {
    "test:insights": "phpinsights analyse --min-quality=100 src/",
    "test:unit": "./vendor/bin/pest",
    "test:types": "phpstan analyse src/",
    "test": [
      "@test:insights",
      "@test:unit",
      "@test:types"
    ],
    "psalm": "./vendor/bin/psalm --show-info=true"
  }
}
